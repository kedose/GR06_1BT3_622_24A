<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Conexión a la base de datos -->
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=PortalEstudiantilEPN</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">01060811</property>

        <!-- Dialecto para SQL Server -->
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>

        <!-- Mostrar las consultas SQL en la consola -->
        <property name="hibernate.show_sql">true</property>

        <!-- Propiedad para que Hibernate actualice o cree las tablas automáticamente -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mapeo de clases -->
        <mapping class="org.epn.estudiantes.model.Usuario"/>
        <mapping class="org.epn.estudiantes.model.ProductoCafeteria"/>
        <mapping class="org.epn.estudiantes.model.MembresiaAsociacion"/>
        <mapping class="org.epn.estudiantes.model.Factura"/>
        <mapping class="org.epn.estudiantes.model.Comentario"/>
        <mapping class="org.epn.estudiantes.model.Carrito"/>
    </session-factory>
</hibernate-configuration>
